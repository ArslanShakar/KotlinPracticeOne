<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="2dp"
              android:background="#F8A1BE" android:gravity="center">

    <TextView android:id="@+id/tv_message" android:layout_width="0dp"
              android:layout_height="wrap_content" android:layout_weight="80" android:padding="8dp"
              android:text="@string/message" android:textSize="16sp" android:textStyle="bold"/>

    <TextView android:id="@+id/tv_share_message" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_marginEnd="8dp"
              android:background="@drawable/ic_share_black"/>
</LinearLayout>